{
    "compilerOptions": { 
        "target": "es2015",
        "module": "es2015",
        "jsx": "react",
        "outDir": "build",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true
  },
  "exclude": [
        "index.android.js",
        "index.ios.js",
        "build",
        "app",
        "node_modules",
        "__tests__"
  ],
  "compileOnSave": true 
}